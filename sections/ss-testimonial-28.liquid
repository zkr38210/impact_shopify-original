  <style>
    @media (min-width: 1024px) {
      .testimonials-media-{{ section.id }} {
        aspect-ratio: 9.6/13;
      }
    }
  </style>
{% elsif media_ratio == "landscape" %}
  <style>
    @media (min-width: 1024px) {
      .testimonials-media-{{ section.id }} {
        aspect-ratio: 12/8;
      }
    }
  </style>
{% elsif media_ratio == "square" %}
  <style>
    @media (min-width: 1024px) {
      .testimonials-media-{{ section.id }} {
        aspect-ratio: 12/12;
      }
    }
  </style>
{% else %}
  <style>
    @media (min-width: 1024px) {
      .testimonials-media-{{ section.id }} {
        aspect-ratio: auto;
      }
    }
  </style>
{% endif %}



  <style>
    .testimonials-stars-{{ section.id }} {
      order: 2;
    }
  </style>
{% elsif content_align_mobile == 'left' %}
  <style>
    .testimonials-stars-{{ section.id }} {
      order: 1;
    }
  </style>
{% endif %}


{%- style -%}
  {{ text_font | font_face: font_display: 'swap' }}
  {{ badge_font | font_face: font_display: 'swap' }}
  {{ author_font | font_face: font_display: 'swap' }}

  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    margin-left: {{ margin_horizontal_mobile }}rem;
    margin-right: {{ margin_horizontal_mobile }}rem;
    border-radius: {{ section_radius | times: 0.6 | round: 0 }}px;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .testimonials-body-{{ section.id }} {
    display: flex;
    flex-direction: column;
    align-items: {{ content_horizontal_align_mobile }};
  }

  .testimonials-review-{{ section.id }} {
    display: flex;
    justify-content: {{ content_horizontal_align_mobile }};
    gap: 10px;
  }

  .testimonials-review-content-{{ section.id }} {
    display: flex;
    flex-direction: column;
    row-gap: 4px;

  }

  .testimonials-stars-{{ section.id }} {
    display: flex;
    align-items: center;
    gap: 1px;
    max-width: fit-content;
  }

  .testimonials-stars-wrapper-{{ section.id }} {
    display: flex;
    align-items: center;
    {% if content_align_mobile == 'right' %}
      justify-content: {{ content_horizontal_align_mobile }};
    {% else %}
      justify-content: start;
    {% endif %}
    gap: 10px;
  }
  
  .testimonials-authors-{{ section.id }} {
    display: flex;
    align-items: center;
    flex-wrap: nowrap;
    flex-direction: row-reverse;
  }

  .testimonials-author-image-{{ section.id }} img,
  .testimonials-author-image-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .testimonials-review-{{ section.id }} {
    justify-content: {{ content_horizontal_align }};
  }

  .testimonials-slider-wrapper-{{ section.id }} {
    display: grid;
  }

  .testimonials-slider-{{ section.id }} {
    min-width: auto !important;
    align-items: stretch !important;
    margin-left: -{{ padding_horizontal_mobile }}rem !important;
    margin-right: -{{ padding_horizontal_mobile }}rem !important;
    padding-left: {{ padding_horizontal_mobile }}rem !important;
    padding-right: {{ padding_horizontal_mobile }}rem !important;
    margin-top: {{ slider_mt_mobile }}px !important;
  }

  .testimonials-slide-{{ section.id }} {
    height: auto !important;
    display: flex !important;
    flex-direction: column !important;
    box-sizing: border-box !important;
    border: {{ slide_border_thickness }}px solid {{ slide_border_color }} !important;
    border-radius: {{ slide_radius }}px !important;
    background-color: {{ slide_bg_color }} !important;
    overflow: hidden !important;
  }

  .testimonials-media-{{ section.id }} {
    position: relative;
    overflow: hidden;
  }

  .testimonials-media-{{ section.id }}:after {
    content: '';
    position: absolute;
    z-index: 1;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .testimonials-media-{{ section.id }} img,
  .testimonials-media-{{ section.id }} svg,  
  .testimonials-media-{{ section.id }} video,
  .testimonials-media-{{ section.id }} iframe{
    border: 0;
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .testimonials-media-{{ section.id }} iframe {
    pointer-events: none;
  }

  .testimonials-media-{{ section.id }} svg {
    background-color: #AFAFAF;
  }

  .testimonials-content-{{ section.id }} {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    flex: 1 1 0;
    padding: {{ slide_content_padding_vertical_mobile }}px {{ slide_content_padding_horizontal_mobile }}px;    
  }

  .testimonials-slide-text-{{ section.id }} {
    text-align: {{ slide_content_align_mobile }};
  }

  .testimonials-slide-text-{{ section.id }} * {
    margin: 0px;
    font-size: {{ text_size_mobile }}px;
    line-height: {{ text_height }}%;
    color: {{ text_color }};
    text-transform: unset;
    word-break: break-word;
    font-weight: 400;
  }

  .testimonials-slide-stars-{{ section.id }} {
    display: flex;
    align-items: center;
    gap: 1px;
    max-width: fit-content;
  }

  .testimonials-slide-stars-wrapper-{{ section.id }} {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    justify-content: {{ slide_content_horizontal_align_mobile }};
    gap: 10px;
    margin-top: {{ stars_wrapper_mt_mobile }}px;
  }
  
  .testimonials-slide-stars-{{ section.id }} svg,
  .testimonials-slide-stars-{{ section.id }} img {
    display: block;
    width: {{ stars_size_mobile }}px;
    height: {{ stars_size_mobile }}px;
    object-fit: cover;
  }

  .testimonials-slide-stars-badge-{{ section.id }} {
    padding: {{ badge_padding_vertical_mobile }}px {{ badge_padding_horizontal_mobile }}px;
    border-radius: {{ badge_radius }}px;
    background-color: {{ badge_bg_color }};
    margin: 0;    
    text-align: center;
    text-transform: unset;
    word-wrap: break-word;
    font-size: {{ badge_size_mobile }}px;
    line-height: {{ badge_height }}%;
    color: {{ badge_color }};  
    font-weight: 700;
  }

  .testimonials-slide-author-{{ section.id }} {
    margin: 0;  
    margin-top: {{ author_mt_mobile }}px;
    font-size: {{ author_size_mobile }}px;
    line-height: {{ author_height }}%;
    color: {{ author_color }};  
    text-transform: unset;
    word-wrap: break-word;
    text-align: {{ slide_content_align_mobile }};
    font-weight: 700;
  }

  .testimonials-play-{{ section.id }} {
    display: none;
    position: absolute;
    top: 50%;
    left: 50%;
    z-index: 2;
    transform: translate(-50%, -50%);
    background-color: {{ play_bg_color }};
    border-radius: {{ play_radius }}px;
    padding: {{ play_size_mobile | times: 0.7 }}px;
    transition: all 0.25s ease 0s;
    cursor: pointer;
  }

  .testimonials-play-{{ section.id }}.active {
    display: block;
  }

  .testimonials-play-{{ section.id }} svg {
    display: block;
    background: none;
    width: {{ play_size_mobile }}px;
    height: {{ play_size_mobile }}px;
    object-fit: cover;
  }

  .testimonials-play-{{ section.id }} svg {
    fill: {{ play_color }};
    transition: all 0.25s ease 0s;
  }

  .testimonials-buttons-{{ section.id }} {
    display: flex;
    align-items: center;
    gap: {{ arrows_gap_mobile }}px;
    width: 100%;
    margin-top: {{ arrows_mt_mobile }}px;
    justify-content: center;
  }

  .testimonials-btn-prev-{{ section.id }},
  .testimonials-btn-next-{{ section.id }} {
    display: flex;
    width: {{ arrow_size_mobile }}px;
    height: {{ arrow_size_mobile }}px;
    border: 0px;
    border: {{ arrow_border_thickness }}px solid {{ arrow_border_color }};
    border-radius: {{ arrow_radius }}px;
    background: transparent;
    background: {{ arrow_bg_color }};
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease 0s;
    cursor: pointer;
    -webkit-appearance: none;
    /* box-shadow: 0px 0px 10px 0px rgba(0,0,0,.15); */
  }

  .testimonials-btn-prev-{{ section.id }} .animate-icon,
  .testimonials-btn-next-{{ section.id }} .animate-icon {
    pointer-events: none;
    place-items: center;
    display: grid;
  }

  .testimonials-btn-prev-{{ section.id }} .animate-icon:before,
  .testimonials-btn-next-{{ section.id }} .animate-icon:before {
    content: "";
    grid-area: 1 / -1;
    transition: all .2s ease;
    width: {{ arrow_icon_size_mobile }}px;
    height: {{ arrow_icon_size_mobile }}px;
    transform: rotate(calc(1 * 45deg));
    box-sizing: border-box;
    border-style: solid;
    border: 0px;
    border-right: 2px solid currentColor;
    border-top: 2px solid currentColor;
    position: relative;
    left: -1px;
  }

  .testimonials-btn-prev-{{ section.id }} .animate-icon:before {
    left: unset;
    right: -1px;
    border-right: 0px;
    border-top: 0px;
    border-bottom: 2px solid currentColor;
    border-left: 2px solid currentColor;
  }

  .testimonials-btn-prev-{{ section.id }} .animate-icon:after,
  .testimonials-btn-next-{{ section.id }} .animate-icon:after {
    content: "";
    grid-area: 1 / -1;
    transition: all .2s ease;
    width: {{ arrow_icon_size_mobile | minus: 0.3 }}px;
    height: 1.6px;
    transform-origin: center;
    opacity: 0;
    background: currentColor;
    transform: scaleX(.5);
  }

  .testimonials-btn-prev-{{ section.id }} span,
  .testimonials-btn-next-{{ section.id }} span {
    color: {{ arrow_color }};
  }

  .testimonials-btn-prev-{{ section.id }}.swiper-button-disabled,
  .testimonials-btn-next-{{ section.id }}.swiper-button-disabled {
    opacity: 0.5;
  }

  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
      margin-left: {{ margin_horizontal }}rem;
      margin-right: {{ margin_horizontal }}rem;
      border-radius: {{ section_radius }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .testimonials-stars-wrapper-{{ section.id }} {
      {% if content_align == 'right' %}
        justify-content: {{ content_horizontal_align }};
      {% else %}
        justify-content: start;
      {% endif %}
    }    

    .testimonials-body-{{ section.id }} {
      align-items: {{ content_horizontal_align }};
    }

    .testimonials-slider-{{ section.id }} {
      margin-top: {{ slider_mt }}px !important;
      overflow: hidden !important;
      margin-left: 0rem !important;
      margin-right: 0rem !important;
      padding-left: 0rem !important;
      padding-right: 0rem !important;
    }

    .testimonials-content-{{ section.id }} {
      padding: {{ slide_content_padding_vertical }}px {{ slide_content_padding_horizontal }}px;    
    }

    .testimonials-slide-text-{{ section.id }} {
      text-align: {{ slide_content_align }};
    }

    .testimonials-slide-text-{{ section.id }} * {
      font-size: {{ text_size }}px;
    }

    .testimonials-slide-stars-wrapper-{{ section.id }} {
      margin-top: {{ stars_wrapper_mt }}px;
      justify-content: {{ slide_content_horizontal_align }};
    }
        
    .testimonials-slide-stars-{{ section.id }} svg,
    .testimonials-slide-stars-{{ section.id }} img {
      width: {{ stars_size }}px;
      height: {{ stars_size }}px;
    } 
    
    .testimonials-slide-stars-badge-{{ section.id }} {
      padding: {{ badge_padding_vertical }}px {{ badge_padding_horizontal }}px;
      font-size: {{ badge_size }}px; 
    }

    .testimonials-slide-author-{{ section.id }} {
      margin-top: {{ author_mt }}px;
      font-size: {{ author_size }}px;
      text-align: {{ slide_content_align }};
    }

    .testimonials-play-{{ section.id }} {
      padding: {{ play_size | times: 0.7 }}px;
    }

    .testimonials-play-{{ section.id }} svg {
      width: {{ play_size }}px;
      height: {{ play_size }}px;
    }
    
    .testimonials-media-{{ section.id }}:hover .testimonials-play-{{ section.id }} {
      background-color: {{ play_bg_hover_color }};
      transition: all 0.25s ease 0s;
    }

    .testimonials-media-{{ section.id }}:hover .testimonials-play-{{ section.id }} svg {
      fill: {{ play_hover_color }};
      transition: all 0.25s ease 0s;
    }

    .testimonials-buttons-{{ section.id }} {
      gap: {{ arrows_gap }}px;
      margin-top: {{ arrows_mt }}px;
    }

    .testimonials-btn-prev-{{ section.id }},
    .testimonials-btn-next-{{ section.id }} {
      width: {{ arrow_size }}px;
      height: {{ arrow_size }}px;
      transition: all 0.25s ease 0s;
    }

    .testimonials-btn-prev-{{ section.id }} .animate-icon:before,
    .testimonials-btn-next-{{ section.id }} .animate-icon:before {
      width: {{ arrow_icon_size }}px;
      height: {{ arrow_icon_size }}px;
    }

    .testimonials-btn-prev-{{ section.id }} .animate-icon:after,
    .testimonials-btn-next-{{ section.id }} .animate-icon:after {
      width: {{ arrow_icon_size | minus: 0.3 }}px;
    }
  }
  
{%- endstyle -%}


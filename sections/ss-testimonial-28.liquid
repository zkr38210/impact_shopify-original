  assign author_size = section.settings.author_size
  assign author_size_mobile = section.settings.author_size_mobile
  assign author_height = section.settings.author_height
  assign author_color = section.settings.author_color
  assign author_mt = section.settings.author_mt
  assign author_mt_mobile = section.settings.author_mt_mobile

  assign play_size = section.settings.play_size
  assign play_size_mobile = section.settings.play_size_mobile
  assign play_radius =section.settings.play_radius
  assign play_bg_color = section.settings.play_bg_color
  assign play_color = section.settings.play_color
  assign play_bg_hover_color = section.settings.play_bg_hover_color
  assign play_hover_color = section.settings.play_hover_color

  assign arrows_gap = section.settings.arrows_gap
  assign arrows_gap_mobile = section.settings.arrows_gap_mobile
  assign arrows_mt = section.settings.arrows_mt
  assign arrows_mt_mobile = section.settings.arrows_mt_mobile

